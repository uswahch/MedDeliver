@{
    ViewBag.Title = "OrderList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Admin Panel<span class="icon fa-angle-double-left"></span>Order List</h1>
<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home" style="color:gray;">Form</a></li>
    <li><a data-toggle="tab" href="#menu1" style="color: gray;">Data</a></li>
</ul>
<div class="container">
    <div class="tab-content">
        <div id="home" class="tab-pane fade in active ">
            <form class="well form-horizontal" action=" " method="post" id="contact_form" style="margin-top:10px;width:92%;background-color:black">
                <fieldset>



                    <div class="form-group">
                        <label class="col-sm-3 control-label"></label>
                        <div class="col-sm-4" style="margin-top:3px;">
                            <input type="text" class="form-control" name="firstName" placeholder="First name"
                                   data-fv-row=".col-sm-4"
                                   data-fv-notempty="true"
                                   data-fv-notempty-message="The first name is required" />
                        </div>

                        <div class="col-sm-4" style="margin-top:3px;">
                            <input type="text" class="form-control" name="lastName" placeholder="Last name"
                                   data-fv-row=".col-sm-4"
                                   data-fv-notempty="true"
                                   data-fv-notempty-message="The last name is required" />
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="col-sm-3 control-label"></label>
                        <div class="col-sm-4" style="margin-top:3px;">
                            <input type="text" class="form-control" name="email" placeholder="E-mail"
                                   data-fv-notempty="true"
                                   data-fv-notempty-message="The email address is required"
                                   data-fv-emailaddress="true"
                                   data-fv-emailaddress-message="The input is not a valid email address" />
                        </div>

                        <div class="col-sm-4" style="margin-top:3px;">
                            <input type="text" class="form-control" name="amount" placeholder="Amount of Medicine"
                                   data-fv-row=".col-sm-4"
                                   data-fv-notempty="true"
                                   data-fv-notempty-message="The Amount is required"
                                   data-fv-different="true" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"></label>
                        <div class="col-sm-4" style="margin-top:3px;">
                            <input type="text" class="form-control" name="email" placeholder="Contact Number"
                                   data-fv-notempty="true"
                                   data-fv-notempty-message="The Contact Number is required" />
                        </div>

                        <div class="col-sm-4" style="margin-top:3px;">
                            <input type="password" class="form-control" name="password" placeholder="Alternative Number"
                                   data-fv-row=".col-sm-4"
                                   data-fv-notempty="true"
                                   data-fv-notempty-message="The Contact Number is required" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"></label>
                        <div class="col-sm-4" style="margin-top:3px; ">
                            <select name="status" class="control" style="background-color:#333;">
                                <option value=" ">Status:</option>
                                <option>Pending</option>
                                <option>Delivered</option>
                                <option>Cancel</option>

                            </select>
                        </div>
                        <label class="col-sm-3 control-label"></label>
                        <div class="col-sm-4" style="margin-top:3px;">
                            <textarea class="form-control" name="message" id="message" placeholder="Permanent Address" rows="6" style="background-color:#333;"
                                      data-fv-notempty="true"
                                      data-fv-notempty-message="The Address is required"></textarea>

                        </div>
                    </div>
                    <!-- <label class="col-sm-3 control-label" style="margin-top:-8%;margin-left:15%;">Select Your Gender</label>
                     <div class="col-sm-6" style="margin-top:-5%;margin-left:30%;">
                         <div class="radio">
                             <label>
                                 <input type="radio" name="gender" value="male"
                                        data-fv-notempty="true"
                                        data-fv-notempty-message="The gender is required" /> Male
                             </label>

                             <label>
                                 <input type="radio" name="gender" value="female" /> Female
                             </label>
                         </div>

                     </div>-->

                    <div class="form-group">
                        <div class="col-sm-6 col-sm-offset-3" style="margin-top:-7%;">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="agree" value="agree"
                                           data-fv-notempty="true"
                                           data-fv-notempty-message="You must agree with the terms and conditions" /> Agree with the terms and conditions
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-9 col-xs-offset-3" style="margin-left:50%;">
                            <button type="submit" style="background-color:rgba(49, 50, 49, 0.66)" name="signup" value="Sign up">Submit</button>
                        </div>
                    </div>


                    <script>
                        // Check the captcha
                        function checkCaptcha(value, validator, $field) {
                            var items = $('#captchaOperation').html().split(' '),
                                sum = parseInt(items[0]) + parseInt(items[2]);
                            return value == sum;
                        }

                        $(document).ready(function () {
                            // Generate a simple captcha
                            function randomNumber(min, max) {
                                return Math.floor(Math.random() * (max - min + 1) + min);
                            }
                            $('#captchaOperation').html([randomNumber(1, 100), '+', randomNumber(1, 200), '='].join(' '));

                            $('#basicBootstrapForm').formValidation();
                        });
                    </script>

                </fieldset>
            </form>
        </div>



        <div id="menu1" class="tab-pane fade">
            <div class="row">
                <div class="col-xs-12">
                    <table class="table table-inverse" style="margin-top:10px;width:92%;background-color:black">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>E-mail</th>
                                <th>Contact No</th>
                                <th>Alt NO</th>
                                <th>Amount</th>
                                <th>Address</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
